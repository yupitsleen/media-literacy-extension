{
  "manifest_version": 3,
  "name": "Media Literacy Extension",
  "version": "1.0.0",
  "description": "Improve media literacy by detecting logical fallacies, hypocrisy, and campaign finance connections in web content.",
  
  "permissions": [
    "storage",
    "activeTab"
  ],
  
  "host_permissions": [
    "https://*.fec.gov/*",
    "https://*.opensecrets.org/*"
  ],
  
  "background": {
    "service_worker": "src/background/service-worker.js"
  },
  
  "content_scripts": [
    {
      "matches": [
        "https://*/*",
        "http://*/*"
      ],
      "js": [
        "src/content/content-script.js"
      ],
      "css": [
        "src/content/content-styles.css"
      ]
    }
  ],
  
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_title": "Media Literacy Extension",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": [
        "src/data/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}